@model OnlineExamination.ViewModels.QuestionDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div class="jumbotron ">
    <h5>Manage this Question</h5>
    <p>@Model.DomainModel.Text</p>
</div>


@using (Html.BeginForm("Create", "Choices", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.DomainModel.Id)


    <div class="row m-4">
        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.ChoiceModel.Text, htmlAttributes: new { @class = "control-label " })
            @Html.TextAreaFor(model => model.ChoiceModel.Text, new { @class = "form-control"})
            @Html.ValidationMessageFor(model => model.ChoiceModel.Text, "", new { @class = "text-danger" })
        </div>
        <div class="form-group  mr-5">
            <label class="col-sm-4"></label>
            <div class="col-sm-10">
                <div class="checkbox">
                    @Html.LabelFor(c => c.ChoiceModel.IsCorrect)
                    @Html.CheckBoxFor(model => model.ChoiceModel.IsCorrect)
                </div>
            </div>
        </div>
        <input type="submit" value="Add Choice to this Exam" style="max-height:50px " class="btn btn-primary mt-5" />
    </div>
}



<table class="table table-bordered table-hover">
    <tr class="table-dark">
        <th>
            Choice Text
        </th>
        <th>
            Is Correct Answer
        </th>
        <th>
            Actions
        </th>

    </tr>

    @foreach (var choice in Model.DomainModel.Choices)
    {
        <tr>
            <td>@choice.Text</td>
            <td>@choice.IsCorrect</td>
            <td class="justify-content-around d-flex">
                <a title="Edit Question" href="/Choices/Edit/@choice.Id"><i class="far fa-edit"></i></a>
                <a title="Delete Question" href="/Choices/Delete/@choice.Id"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
    }
</table>

<p>
    <a class="ml-2 btn btn-info" href="/Exams/Details/@Model.DomainModel.ExamId">Back to List</a>

</p>
