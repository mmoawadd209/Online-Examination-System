@model OnlineExamination.Models.Choice

@{
    ViewBag.Title = "Edit";
}
<div class="jumbotron">
    <h5> Edit the Choice Text.</h5>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.QuestionId)

        <div class="col-md-4 form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextAreaFor(model => model.Text, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-4">
        <label class="col-sm-4"></label>
        <div class="col-sm-10">
            <div class="checkbox">
                @Html.LabelFor(c => c.IsCorrect)
                @Html.CheckBoxFor(model => model.IsCorrect)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a href="/Questions/Details/@Model.QuestionId" class="btn btn-info">Back To List</a>


        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
